@page "/prds"

<h3>Productos</h3>
<hr />
<a href="/PrdCre" class="btn btn-primary mb-3">
    <span class="oi oi-plus" aria-hidden="true"></span> Nuevo Producto
</a>
@if (LstPrds == null)
{
    // agregar Gif animado
    <p>Cargando...</p>
}
else
{
    if (LstPrds.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>
                            <span class="sort-link" @onclick="@(() => Tbl_Ord("Prd"))">Código</span>
                            <span class="oi @(Ord_Sty("Prd"))"></span>
                        </th>
                        <th>
                            <span class="sort-link" @onclick="@(() => Tbl_Ord("Dsc"))">Descripción</span>
                            <span class="oi @(Ord_Sty("Dsc"))"></span>
                        </th>
                        <th>
                            <span class="sort-link" @onclick="@(() => Tbl_Ord("St"))">Status</span>
                            <span class="oi @(Ord_Sty("St"))"></span>
                        </th>
                        <th>
                            <span class="sort-link" @onclick="@(() => Tbl_Ord("Prc"))">Precio</span>
                            <span class="oi @(Ord_Sty("Prc"))"></span>
                        </th>
                        <th>
                            <span class="sort-link" @onclick="@(() => Tbl_Ord("Mon"))">Moneda</span>
                            <span class="oi @(Ord_Sty("Mon"))"></span>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lxPrd in LstPrds)
                    {
                        <tr>
                            <td>@lxPrd.Prd</td>
                            <td>@lxPrd.Dsc</td>
                            <td>@Enum.GetName(typeof(PrdSt), lxPrd.St)</td>
                            <td>@lxPrd.Prc</td>
                            <td>@lxPrd.Mon</td>
                            <td class="cell-controls">
                                <a class="btn btn-outline-primary" href="/PrdEdt/@lxPrd.Prd" title="Editar">
                                    <span class="oi oi-pencil"></span>
                                </a>
                                <a class="btn btn-outline-primary" href="/PrdBrr/@lxPrd.Prd" title="Borrar">
                                    <span class="oi oi-trash"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="alert alert-info">No hay datos.</p>
    }
}

@code {
    List<PrdModel> LstPrds;
    private bool IsAsc;
    private string NomColAct;

    protected override async Task OnInitializedAsync()
    {
        LstPrds = await PrdDM.LstPrd_Obt() as List<PrdModel>;
    }

    private string Ord_Sty(string NomCol)
    {
        if (NomColAct != NomCol)
        {
            return string.Empty;
        }
        if (IsAsc)
        {
            return "oi-sort-ascending";
        }
        else
        {
            return "oi-sort-descending";
        }
    }


    private void Tbl_Ord(string NomCol)
    {
        if (NomCol != NomColAct)
        {
            LstPrds = LstPrds.OrderByDescending(x => x.GetType().GetProperty(NomCol).GetValue(x, null)).ToList();
            NomColAct = NomCol;
            IsAsc = true;
        }
        else
        {
            if (IsAsc)
            {
                LstPrds = LstPrds.OrderByDescending(x => x.GetType().GetProperty(NomCol).GetValue(x, null)).ToList();
            }
            else
            {
                LstPrds = LstPrds.OrderBy(x => x.GetType().GetProperty(NomCol).GetValue(x, null)).ToList();
            }
            IsAsc = !IsAsc;
        }

    }

}
